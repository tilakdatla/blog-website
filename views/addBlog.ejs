<%- include("partials/header.ejs") %>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('/images/OIP.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Add Blog</h1>
                            <span class="subheading">Add your own blog</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <p>Fill out the form below to add blog on the home page.</p>
                        <div class="my-5">
                           
                            <form id="contactForm" data-sb-form-api-token="API_TOKEN" action="/submit" method="POST">
                                <div class="form-floating">
                                    <input class="form-control" id="name" name="name" type="text" placeholder="Enter your name..." required />
                                    <label for="name">Name</label>
                                    <div class="invalid-feedback">A name is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="title" name="title" type="text" placeholder="Enter Title..." required />
                                    <label for="title">Blog title</label>
                                    <div class="invalid-feedback">A title is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="subtitle" name="subtitle" type="text" placeholder="Enter subtitle..." required />
                                    <label for="subtitle">Blog subtitle</label>
                                    <div class="invalid-feedback">A subtitle is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="img" name="img" type="url" placeholder="Enter Image source..." pattern="https?://.+" required />
                                    <label for="img">Image source</label>
                                    <div class="invalid-feedback">A valid image source URL is required.</div>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" id="data" name="data" placeholder="Enter your data here..." style="height: 12rem" required></textarea>
                                    <label for="data">Data</label>
                                    <div class="invalid-feedback">Data is required.</div>
                                </div>
                                <br />
                                <button class="btn btn-primary text-uppercase" onclick=" blogdetail();" id="submitButton" type="submit">ADD</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
       
        <%- include("partials/footer.ejs") %>


        